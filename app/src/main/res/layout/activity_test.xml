<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_900">

    <com.luciferldy.zhihutoday_as.ui.view.IndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="bottom"
        app:indicator_count="5"
        app:indicator_distance="15dip"
        app:indicator_size="10dip"
        app:indicator_normal_color="@color/md_grey_400"
        app:indicator_selected_color="@color/md_grey_700"/>

</FrameLayout>